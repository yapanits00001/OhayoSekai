<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/logotop"
                android:layout_width="175dp"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dclog">

            </View>

            <View
                android:id="@+id/rect2"
                android:layout_width="317dp"
                android:layout_height="73dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/fmoney">

            </View>


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/VPLoansSavings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:id="@+id/indicator_VP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:orientation="horizontal">



                <!-- Indicator ImageView elements will be added here -->
            </LinearLayout>


            <View
                android:id="@+id/rect3"
                android:layout_width="337dp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:background="@drawable/savemoney_05_1"></View>


            <GridLayout
                android:layout_width="365dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/commodityloan"
                    android:layout_marginLeft="15dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/commodity" />

                <ImageButton
                    android:id="@+id/shorttermloan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shortterm" />

                <ImageButton
                    android:id="@+id/christmasloan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/christmasloan" />

                <ImageButton
                    android:id="@+id/advancemidyearloan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/advancemidyear" />




            </GridLayout>



            <GridLayout
                android:layout_width="365dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:id="@+id/commodityloan1"
                    android:layout_marginLeft="15dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/commodity" />

                <ImageButton
                    android:id="@+id/shorttermloan1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shortterm" />

                <ImageButton
                    android:id="@+id/christmasloan1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/christmasloan" />

                <ImageButton
                    android:id="@+id/advancemidyearloan1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/advancemidyear" />




            </GridLayout>



        </LinearLayout>




    </RelativeLayout>



</ScrollView>